<h1>Update <%=@task.description() %> </h1>

<form action="/tasks/<%= @task.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="description">Redescribe your task:</label>
  <input id="description" name="description" type="text">

  <label for="done">Check if your task is done:</label>
  <input id="done" name="done" type="checkbox" value="done">

  <button type="submit">Update</button>
</form>
